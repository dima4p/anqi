= form_for(collection) do |f|
  - if collection.errors.any?
    #error_explanation
      %h2
        = t 'errors.template.header', model: t('.collection'), count: collection.errors.count
      %ul
        - collection.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :crt
    %br
    = f.number_field :crt
  .field
    = f.label :mod
    %br
    = f.number_field :mod
  .field
    = f.label :scm
    %br
    = f.number_field :scm
  .field
    = f.label :ver
    %br
    = f.number_field :ver
  .field
    = f.label :dty
    %br
    = f.number_field :dty
  .field
    = f.label :usn
    %br
    = f.number_field :usn
  .field
    = f.label :ls
    %br
    = f.number_field :ls
  .field
    = f.label :conf
    %br
    = f.text_area :conf
  .field
    = f.label :models
    %br
    = f.text_area :models
  .field
    = f.label :decks
    %br
    = f.text_area :decks
  .field
    = f.label :dconf
    %br
    = f.text_area :dconf
  .field
    = f.label :tags
    %br
    = f.text_area :tags

  .actions
    = f.submit
